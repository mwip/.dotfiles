#! /usr/bin/bash

home="/home/loki/"
sep=" | "

#~~~~~~~~~~~~Date~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~# 
dte(){
  dte="$(date +"%Y-%m-%d %H:%M")"
  echo -e "$dte"
}

#~~~~~~~~~~~~Battery~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~# 
bat(){
    if [ "$(hostname)" == "bifrost" ]; then
	bat="$($home/.scripts/batterystatus.sh)"
	echo -e "$bat$sep"
    fi
}

#~~~~~~~~~~~~Brightness~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~# 
bri(){
    if [ "$(hostname)" == "bifrost" ]; then
	bri="$($home/.scripts/get_brightness.sh)"
	echo -e "$bri$sep"
    fi
}

#~~~~~~~~~~~~Volume~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~# 
vol(){
    echo -e " 墳 $(pamixer --get-volume-human)$sep"
}


#~~~~~~~~~~~~Music~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~# 
mus(){
    if [ "$(hostname)" == "andlang" ]; then
	music=$(echo $(mpc) | sed -e 's/\n//g' -e 's/\[playing\]/~/' -e 's/\[paused\]/~/' -e 's/~.*//g')
	[ -z "$(echo $music | grep 'volume: n/a')" ] &&
	    echo " "$music$sep
    fi
}
#~~~~~~~~~~~~Network~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~# 
net(){
    echo -en "$($HOME/.scripts/net_speed.sh)$sep"
}

#~~~~~~~~~~~~Temperature~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~#
temp(){
    [ "$(hostname)" == "walhall" ] && temp=$(sensors | grep "CPU Temperature" | awk '{print $3}' | sed 's/+//')
    [ "$(hostname)" == "bifrost" ] && temp=$(sensors | grep "Package id 0:" | awk '{print $4}' | sed 's/+//')
    [ "$(hostname)" == "andlang" ] && temp=$(sensors | grep "Tdie:" | awk '{print $2}' | sed 's/+//')
    echo "  "$temp$sep
}

status(){
    status="$(net)$(mus)$(bat)$(temp)$(vol)$(bri)$(dte)"
    echo "$status"
}

#~~~~~~~~~~~~Perform oneshot~~~~~~~~~~~~~~~~~~~~~~~~~~#
if [ $1 == "-oneshot" ]; then
    status="$(status)"
    echo $status
    exit
fi


#~~~~~~~~~~~~Loop this thing~~~~~~~~~~~~~~~~~~~~~~~~~~#
while true; do
    status="$(status)"
    echo  $status
    xsetroot -name "$status"
    sleep 2
done
